# Asaas Configuration (Server-side ONLY - NEVER expose these keys)
# ⚠️ CRITICAL: These keys must ONLY be used in API Routes (server-side)
# ⚠️ NEVER use NEXT_PUBLIC_ prefix for payment API keys
ASAAS_ENV=sandbox
ASAAS_API_KEY_SANDBOX=your_sandbox_api_key_here
ASAAS_API_KEY_PROD=your_production_api_key_here
ASAAS_WEBHOOK_TOKEN=your_webhook_token_here

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
TZ=America/Sao_Paulo

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/svlentes"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your_nextauth_secret_here"

# Redis
UPSTASH_REDIS_REST_URL="your-redis-url"
UPSTASH_REDIS_REST_TOKEN="your-redis-token"

# Email
RESEND_API_KEY="your-resend-key"

# Personalization System (Phase 1 - Edge Runtime)
PERSONALIZATION_ENABLED=true
PERSONALIZATION_DEBUG=false
PERSONALIZATION_CACHE_TTL=3600
FINGERPRINT_SALT="your-unique-salt-here-change-in-production"

# Edge Runtime Configuration
EDGE_RUNTIME_ENABLED=true
EDGE_REGIONS="gru1,gig1" # São Paulo + Rio de Janeiro

# Redis Cache (Upstash)
UPSTASH_REDIS_REST_URL="https://your-redis-instance.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-redis-token-here"
REDIS_CACHE_TTL_MIN=1800 # 30 minutes (low confidence)
REDIS_CACHE_TTL_MAX=14400 # 4 hours (high confidence)

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000 # 1 minute

# A/B Testing
AB_TESTING_ENABLED=true
AB_TESTING_TRAFFIC_ALLOCATION=100

# Localização
DEFAULT_LOCALE=pt-BR
SUPPORTED_LOCALES=pt-BR,en-US,es-ES

# Privacidade
BEHAVIOR_TRACKING_ENABLED=true
BEHAVIOR_DATA_RETENTION_DAYS=90
CONSENT_REQUIRED=true

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
LATENCY_ALERT_THRESHOLD_MS=100 # Alert if P95 > 100ms

# Analytics
PERSONALIZATION_ANALYTICS_ENABLED=true
CONVERSION_TRACKING_ENABLED=true

# Stripe (mantido para referência)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Monitoring
SENTRY_DSN="your-sentry-dsn"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# WhatsApp
NEXT_PUBLIC_WHATSAPP_NUMBER="5533998601427"
